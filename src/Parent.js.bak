//----- Parent.js -----
import React from 'react';
import Child from './Child';

class Parent extends React.Component {
  constructor(){ //최초의 한번 실행 랜더가 실행하기 전
	super();
	this.state = {
		index : 0
	};
  }
  handleClick(i){
	this.setState({ //랜더 호출(state를 변경할때는 setState를 사용)
		index : i
	});
  }
  render() {
	const { index } = this.state;
    return (
      <div>
        <Child 
			isSelected={index === 0}
			setIndex ={()=> this.handleClick(0)}
			name="gomugom" gender="male" />
        <Child 
			isSelected={index === 1}
			setIndex ={()=> this.handleClick(1)}
			name="iu" gender="female" />
		<Child 
			isSelected={index === 2}
			setIndex ={()=> this.handleClick(2)}
			name="yoo" />
      </div>
    )
  }
}
export default Parent;










